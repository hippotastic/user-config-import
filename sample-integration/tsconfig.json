{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": [
    "src/**/*.ts"
  ],
}
